<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#00000000"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:id="@+id/order_layout_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp"
       >


        <TextView
            android:id="@+id/order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:textColor="@color/black"
            tools:text="Order No: KakebeMZR9" />


        <TextView
            android:id="@+id/order_tracking_lable"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:text="Tracking ID: "
            android:textColor="@color/light_grey"
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/order_tracking_no"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date"
            android:layout_toRightOf="@id/order_tracking_lable"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"

            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="UMKK34099112" />


        <TextView
            android:id="@+id/order_total_label"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_tracking_lable"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:text="Total Amount: "

            android:textColor="@color/light_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_total_price"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_tracking_lable"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/order_total_label"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="UGX 34,600" />


        <TextView
            android:id="@+id/order_status_lable"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_total_price"
            android:layout_marginTop="8dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/order_status"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:text="Status"
            android:textColor="@color/light_grey" />

        <TextView
            android:id="@+id/order_status"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_total_price"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:textColor="@color/niceGreen"
            tools:text="Delivered" />


        <TextView
            android:id="@+id/order_address_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_total_price"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:text="Delivery Info"
            android:textSize="12sp"
            android:textColor="@color/light_grey" />

        <TextView
            android:id="@+id/order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_address_lable"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="Lira, Adyel 0787250196" />


    </RelativeLayout>




</androidx.cardview.widget.CardView>