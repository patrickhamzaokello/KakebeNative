<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#00000000"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/order_layout_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp"
        >


        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:maxLines="2"
            android:textColor="@color/black"
            tools:text="oweta jacob emmy" />


        <TextView
            android:id="@+id/order_tracking_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:text="Email"
            android:textColor="@color/light_grey" />

        <TextView
            android:id="@+id/order_tracking_no"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_toRightOf="@id/order_tracking_lable"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_bold"
            android:maxLines="2"
            android:textColor="@color/black"
            tools:text="oweta001@gmail.com" />


        <TextView
            android:id="@+id/order_total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_tracking_lable"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:includeFontPadding="false"
            android:text="Address"
            android:textColor="@color/light_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/order_total_price"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_tracking_lable"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/order_total_label"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:fontFamily="@font/montserrat_bold"
            android:maxLines="2"
            android:textColor="@color/black"
            tools:text="Obote Avenue" />


        <TextView
            android:id="@+id/order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_total_price"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:textColor="@color/profilecards"
            tools:text=" Lira City" />


    </RelativeLayout>




</androidx.cardview.widget.CardView>