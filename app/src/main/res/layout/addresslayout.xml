<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    android:id="@+id/addressCard"
    >



    <LinearLayout
        android:id="@+id/order_layout_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:padding="20dp"
        >


        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:maxLines="2"
            android:textColor="@color/black"
            android:text="Oweta jacob emmy" />

        <TextView
            android:id="@+id/contactlable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:layout_marginTop="10dp"
            android:textColor="#787878"
            android:text="Contact" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:textColor="@color/black"
            android:text="owerta@gmail.com" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:textColor="@color/black"
            android:text="078782901" />


        <TextView
            android:id="@+id/addresslable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:textColor="#787878"
            android:text="Address" />



        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:textColor="@color/black"
            android:text="Uganda, Lira City, Obote Avenue" />

    </LinearLayout>



</androidx.cardview.widget.CardView>