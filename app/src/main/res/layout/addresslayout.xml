<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addressCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="16dp"
    android:background="@color/white"
    app:cardBackgroundColor="#00000000"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    >


    <RelativeLayout
        android:id="@+id/order_layout_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/addBtn"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:background="@drawable/custom_btn_select"
            android:backgroundTint="@color/black"
            android:clickable="false"
            android:theme="@style/greenBtn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/addBtn"
            android:orientation="vertical">

            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="16sp"
                android:text="Lira City, Obote Avenue, Uganda"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/montserrat"
                android:textSize="14sp"
                android:text="owerta@gmail.com"
                android:textColor="#787878" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/montserrat"
                android:textSize="14sp"
                android:text="078782901"
                android:textColor="#787878" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:text="Delivery Cost"
                android:textColor="#787878" />
            <TextView
                android:id="@+id/shipping_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/montserrat_bold"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:text="UGX 8,900"
                android:textColor="#000000" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>