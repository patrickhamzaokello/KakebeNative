<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="20dp">


    <TextView
        android:id="@+id/slider_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/first_slide_title"
        android:textColor="#292929"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/slider_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slider_heading"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/first_slide_desc"
        android:textColor="#5C5C5C"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/slider_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/slider_desc"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:padding="20dp"
        app:srcCompat="@drawable/demoproduct" />

</RelativeLayout>