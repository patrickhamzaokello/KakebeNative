<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onboardingBG"
    android:orientation="vertical"
    tools:context=".SplashActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/bigcircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/splashimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-60dp"
                android:layout_marginRight="-200dp"
                android:src="@drawable/ic_component_2__1_" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bigcirclebottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

            <ImageView
                android:id="@+id/splashimage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="-200dp"
                android:layout_marginBottom="-60dp"
                android:src="@drawable/ic_component_2__1_" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/centeritem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/endfootertext"
            android:gravity="center_vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/kakebelogo"
                    android:theme="@style/WhiteBtn">

                </ImageView>

                <TextView
                    android:id="@+id/introtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/splashimage"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Kakebe Shop"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/secondintrotext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/introtext"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="You Order, We Deliver"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/endfootertext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/montserrat"
            android:layout_margin="20dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Choose from over one million products available to be delivered to your desired location / address"
            android:textColor="@color/white"
            android:textSize="10sp" />







    </RelativeLayout>










</LinearLayout>



