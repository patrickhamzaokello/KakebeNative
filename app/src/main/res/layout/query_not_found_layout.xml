<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/notFound_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_undraw_happy_music_g6wc__1_"/>

        <TextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Sorry! We can't find what you are looking for. consider trying another search"/>



        <androidx.cardview.widget.CardView
            android:id="@+id/welcome_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0B7A3D"
                android:padding="20dp">

                <TextView
                    android:id="@+id/hello_usertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:text="Search Tips"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:transitionName="logo_text"

                    />

                <TextView
                    android:id="@+id/option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hello_usertext"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:includeFontPadding="false"
                    android:text="1. Always use Product names when making a search"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:transitionName="logo_desc" />

                <TextView
                    android:id="@+id/option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/option1"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:includeFontPadding="false"
                    android:text="2. Consider not being too wordy when making a search, use short words to describe a product"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:transitionName="logo_desc" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

</merge>