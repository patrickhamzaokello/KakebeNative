<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="20dp"
    android:clipToPadding="false">


    <RelativeLayout
        android:id="@+id/flash_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/purple_500"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/flash_main_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/section_show_all_button"
            android:fontFamily="@font/montserrat_bold"
            android:includeFontPadding="false"
            android:text="Section Name"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/flash_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flash_main_name"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/section_show_all_button"
            android:fontFamily="@font/montserrat"
            android:includeFontPadding="false"
            android:text="Kakebe Shop Online"
            android:textColor="#FFEB3B"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/section_show_all_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_icomoon_free_price_tags" />


    </RelativeLayout>


    <!--  recycler view for items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/flash_product_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flash_heading"

        />




</RelativeLayout>

