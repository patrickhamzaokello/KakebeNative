<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/rootbg"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/welcome_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00000000"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@color/purple_200">

            <TextView
                android:id="@+id/hello_usertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/montserrat_bold"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="The New Shop in Town"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:transitionName="logo_text"

                />

            <TextView
                android:id="@+id/what_they_eat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hello_usertext"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="Re-discover Kakebe Online Shop New Exciting Offers  now available on both the new Web and Mobile app for fast and secure Delivery"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:transitionName="logo_desc" />


            <Button
                android:id="@+id/cardclosebutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/custom_btn_close"
                android:theme="@style/Closebutton" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/home_slider"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_marginHorizontal="10dp"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="left|bottom"
        app:sliderIndicatorMarginBottom="8dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="1dp"
        app:sliderIndicatorRadius="0.8dp"
        app:sliderIndicatorSelectedColor="#FFFFFF"
        app:sliderIndicatorUnselectedColor="#80FFFFFF"
        app:sliderScrollTimeInSec="1"
        app:sliderStartAutoCycle="true" />

</LinearLayout>